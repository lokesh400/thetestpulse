<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Resource Upload</title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.0.0-beta.3/dist/tailwind.min.css" rel="stylesheet">
</head>

<body class="bg-gray-100">
    <div class="container mx-auto p-6">
        <h1 class="text-3xl font-semibold mb-6 text-center">Add New Resource Details</h1>

        <!-- Add Department Form -->
        <div class="bg-white p-6 rounded-lg shadow-md mb-6">
            <h2 class="text-lg font-semibold mb-4">Add Department</h2>
            <form action="/add-department" method="POST">
                <input type="text" name="name" placeholder="Enter Department Name" required
                    class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:border-blue-500 focus:ring-1 focus:ring-blue-500 transition-all mb-4">
                <button type="submit"
                    class="w-full py-2 bg-blue-500 text-white rounded-lg hover:bg-blue-600 focus:outline-none">Add Department</button>
            </form>
        </div>

        <!-- Add Branch Form -->
        <div class="bg-white p-6 rounded-lg shadow-md mb-6">
            <h2 class="text-lg font-semibold mb-4">Add Branch</h2>
            <form action="/add-branch" method="POST">
                <select name="year" required
                    class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:border-blue-500 focus:ring-1 focus:ring-blue-500 transition-all mb-4">
                    <option value="" disabled selected>Select Year</option>
                    <option value="1">1st</option>
                    <option value="2">2nd</option>
                    <option value="3">3rd</option>
                    <option value="4">4th</option>
                </select>
                <select name="department" required
                    class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:border-blue-500 focus:ring-1 focus:ring-blue-500 transition-all mb-4">
                    <option value="" disabled selected>Select Department</option>
                    <% departments.forEach(function(department) { %>
                    <option value="<%= department.name %>"><%= department.name %></option>
                    <% }); %>
                </select>
                <input type="text" name="name" placeholder="Enter Branch Name" required
                    class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:border-blue-500 focus:ring-1 focus:ring-blue-500 transition-all mb-4">
                <button type="submit"
                    class="w-full py-2 bg-blue-500 text-white rounded-lg hover:bg-blue-600 focus:outline-none">Add Branch</button>
            </form>
        </div>

        <!-- Add Subject Form -->
        <div class="bg-white p-6 rounded-lg shadow-md mb-6">
            <h2 class="text-lg font-semibold mb-4">Add Subject</h2>
            <form action="/add-subject" method="POST">
                 <select name="year" required
                    class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:border-blue-500 focus:ring-1 focus:ring-blue-500 transition-all mb-4">
                    <option value="" disabled selected>Select Year</option>
                    <option value="1">1st</option>
                    <option value="2">2nd</option>
                    <option value="3">3rd</option>
                    <option value="4">4th</option>
                </select>
                <select name="department" required
                    class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:border-blue-500 focus:ring-1 focus:ring-blue-500 transition-all mb-4">
                    <option value="" disabled selected>Select Department</option>
                    <% departments.forEach(function(department) { %>
                    <option value="<%= department.name %>"><%= department.name %></option>
                    <% }); %>
                </select>
                <select name="branch" required
                    class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:border-blue-500 focus:ring-1 focus:ring-blue-500 transition-all mb-4">
                    <option value="" disabled selected>Select Branch</option>
                    <% branches.forEach(function(branch) { %>
                    <option value="<%= branch.name %>"><%= branch.name %></option>
                    <% }); %>
                </select>
                <input type="text" name="name" placeholder="Enter Subject Name" required
                    class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:border-blue-500 focus:ring-1 focus:ring-blue-500 transition-all mb-4">
                <button type="submit"
                    class="w-full py-2 bg-blue-500 text-white rounded-lg hover:bg-blue-600 focus:outline-none">Add Subject</button>
            </form>
        </div>

        <!-- Add Type Form -->
        <div class="bg-white p-6 rounded-lg shadow-md mb-6">
            <h2 class="text-lg font-semibold mb-4">Add Type</h2>
            <form action="/add-type" method="POST">
                <input type="text" name="typeName" placeholder="Enter Type (e.g., Book, Notes, Paper)" required
                    class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:border-blue-500 focus:ring-1 focus:ring-blue-500 transition-all mb-4">
                <button type="submit"
                    class="w-full py-2 bg-blue-500 text-white rounded-lg hover:bg-blue-600 focus:outline-none">Add Type</button>
            </form>
        </div>

    </div>
</body>

</html>
