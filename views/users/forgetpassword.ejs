<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Forget Password</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100 flex items-center justify-center min-h-screen">

  <div class="w-full max-w-md p-8 space-y-6 bg-white rounded-xl shadow-lg">

    <% if (success_msg && success_msg.length>0) { %>
      <div id="successToast" class="p-4 text-sm text-green-700 bg-green-100 rounded-lg">
        <%= success_msg %>
      </div>
    <% } %>

    <% if (error_msg && error_msg.length>0) { %>
      <div id="errorToast" class="p-4 text-sm text-red-700 bg-red-100 rounded-lg">
        <%= error_msg %>
      </div>
    <% } %>

    <form id="form" action="/user/forget/password" method="POST" class="space-y-5">
      <h2 class="text-2xl font-bold text-center text-gray-700">Forgot Password</h2>

      <!-- Step 1: Email -->
      <div id="step1" class="space-y-4">
        <label class="block">
          <span class="text-sm text-gray-600">Email</span>
          <input required type="email" name="email" id="email"
            class="w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-400"/>
        </label>
        <button type="button" id="send-otp"
          class="w-full bg-blue-500 text-white font-semibold py-2 rounded-lg hover:bg-blue-600 transition">
          Send OTP
        </button>
      </div>

      <!-- Step 2: OTP -->
      <div id="step2" class="space-y-4 hidden">
        <label class="block">
          <span class="text-sm text-gray-600">Enter OTP</span>
          <input required type="text" name="otp" id="otp"
            class="w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-400"/>
        </label>
        <button type="button" id="verify-otp"
          class="w-full bg-green-500 text-white font-semibold py-2 rounded-lg hover:bg-green-600 transition">
          Verify OTP
        </button>
      </div>

      <!-- Step 3: New Password -->
      <div id="step3" class="space-y-4 hidden">
        <label class="block">
          <span class="text-sm text-gray-600">New Password</span>
          <input required type="password" name="newPassword"
            class="w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-400"/>
        </label>

        <label class="block">
          <span class="text-sm text-gray-600">Confirm New Password</span>
          <input required type="password" name="confirmNewPassword"
            class="w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-400"/>
        </label>

        <button type="submit"
          class="w-full bg-purple-600 text-white font-semibold py-2 rounded-lg hover:bg-purple-700 transition">
          Submit
        </button>
      </div>
    </form>
  </div>

 <script>
  const sendOtpBtn = document.getElementById('send-otp');
  const verifyOtpBtn = document.getElementById('verify-otp');
  const step1 = document.getElementById('step1');
  const step2 = document.getElementById('step2');
  const step3 = document.getElementById('step3');

  sendOtpBtn.addEventListener('click', async function () {
    const email = document.getElementById('email').value;
    if (!email) return alert("Please enter your email.");

    sendOtpBtn.disabled = true;
    sendOtpBtn.innerText = 'Sending...';
    sendOtpBtn.classList.add('cursor-not-allowed', 'opacity-50');

    try {
      const res = await fetch('/user/otp/forget-password', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({ email })
      });

      const result = await res.json();
      alert(result.message);

      step1.classList.add('hidden');
      step2.classList.remove('hidden');
    } catch (err) {
      console.error(err);
      alert('Failed to send OTP');
    } finally {
      sendOtpBtn.disabled = false;
      sendOtpBtn.innerText = 'Send OTP';
      sendOtpBtn.classList.remove('cursor-not-allowed', 'opacity-50');
    }
  });

  verifyOtpBtn.addEventListener('click', () => {
    const otp = document.getElementById('otp').value;
    if (!otp) return alert("Please enter the OTP.");
    step2.classList.add('hidden');
    step3.classList.remove('hidden');
  });
</script>
</body>
</html>
